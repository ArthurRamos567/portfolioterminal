{
  "compilerOptions": {
    "module": "CommonJS",

    "target": "ES2017",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "rootDir": "./", 
    "baseUrl": ".",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop":true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "paths": {
      "src/*": ["src/*"]
    },

  },
  "include": ["./**/*", "./server.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"],
  "type": "module",
}